{
	"name": "directus-kubernetes-bundle",
	"description": "Please enter a description for your extension",
	"icon": "extension",
	"version": "2.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"src"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"api": "src/api.js",
			"app": "src/app.js"
		},
		"entries": [
			{
				"type": "hook",
				"name": "kubernetes-hooks",
				"source": "src/kubernetes-hooks/index.js"
			},
			{
				"type": "endpoint",
				"name": "kubernetes-endpoint",
				"source": "src/kubernetes-endpoint/index.js"
			}
		],
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build --no-minify",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add",
		"format": "prettier -w src/"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "11.0.10",
		"prettier": "^3.2.5"
	},
	"dependencies": {
		"@kubernetes/client-node": "0.18.1",
		"kitegg-directus-extension-common": "github:KITeGG-Node-Modules/kitegg-directus-extension-common",
		"luxon": "^3.4.4",
		"slugify": "^1.6.6",
		"validate.js": "^0.13.1",
		"yaml": "^2.4.1"
	}
}
